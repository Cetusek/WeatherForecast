<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.marek.weatherforecast.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/MainActivityButtonMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/maps_icon" />

        <ImageButton
            android:id="@+id/MainActivityButtonStorms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/storm_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/MainActivityButtonFavourites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/favorites_icon" />

        <ImageButton
            android:id="@+id/MainActivityButtonPresenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/presenter_icon" />

    </LinearLayout>

</LinearLayout>
