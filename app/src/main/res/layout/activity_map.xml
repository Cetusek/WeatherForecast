<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.marek.weatherforecast.map.MapActivity"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/MapActivityMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/MapActivityButtonAddToFavourites"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/add_to_favorites_icon" />

        <ImageButton
            android:id="@+id/MapActivityButtonShowForecast"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="10pt"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/presenter_icon" />

    </LinearLayout>

</LinearLayout>
